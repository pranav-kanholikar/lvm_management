    <%=f.error_span(:designation) %>
  </div>
  <div class="form-group">
    <%= f.label :department, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :department, :class => 'form-control' %>
    </div>
    <%=f.error_span(:department) %>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :active, :class => 'form-control' %>
    </div>
    <%=f.error_span(:active) %>
  </div>
  <div class="form-group">
    <%= f.label :lead, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lead, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lead) %>
  </div>
  <div class="form-group">
    <%= f.label :employer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :employer_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:employer_id) %>
