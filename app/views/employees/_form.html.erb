  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit (@employer), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employer_employees_path, :class => 'btn btn-default' %>
    </div>
  </div>

