<%= form_for @employee, url: employer_employees_path(params[:employer_id]), :html => { :class => "form-horizontal employee" } do |f| %>


<%= puts params.inspect %>

<%= puts @employer.inspect %>

  <% if @employee.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_name) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_joining, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_joining, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_joining) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_termination, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_termination, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_termination) %>
  </div>
  <div class="form-group">
    <%= f.label :manager, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :manager, :class => 'form-control' %>
    </div>
    <%=f.error_span(:manager) %>
  </div>
  <div class="form-group">
    <%= f.label :designation, :class => 'control-label col-lg-2' %>
