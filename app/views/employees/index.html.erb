<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:date_of_joining) %></th>
      <th><%= model_class.human_attribute_name(:date_of_termination) %></th>
      <th><%= model_class.human_attribute_name(:manager) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%= model_class.human_attribute_name(:department) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:lead) %></th>
      <th><%= model_class.human_attribute_name(:employer_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employer_employee_path(id: employee.id) %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.date_of_joining %></td>
        <td><%= employee.date_of_termination %></td>
        <td><%= employee.manager %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.department %></td>
        <td><%= employee.active %></td>
        <td><%= employee.lead %></td>
        <td><%= employee.employer_id %></td>
        <td><%=l employee.created_at %></td>
        <td>

          <%# <%= link_to t('.Apply_leaves', :default => t("helpers.links.Apply_leaves")), 
                      new_employer_employee_leavee_path(employee_id: employee.id, employer_id: params[:employer_id]), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      employer_employee_path(id: employee.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employer_employee_path(id: employee.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employer_employee_path(id: employee.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employer_employee_path,
            :class => 'btn btn-primary' %><br/>


            <%= will_paginate @employees, renderer: BootstrapPagination::Rails  %>
