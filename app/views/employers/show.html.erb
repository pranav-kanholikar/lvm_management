<%- model_class = Employer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @employer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @employer.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @employer.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @employer.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @employer.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @employer.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_no) %>:</strong></dt>
  <dd><%= @employer.phone_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alternative_no) %>:</strong></dt>
  <dd><%= @employer.alternative_no %></dd>
</dl>
<%= link_to t('.Show_Employees', :default => t("helpers.links.Show_Employees")),
              employer_employees_path(@employer), :class => 'btn btn-default'  %>
<%= link_to t('.Add_Employees', :default => t("helpers.links.Add_Employees")),
              new_employer_employee_path(@employer), :class => 'btn btn-default'  %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              employers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employer_path(@employer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employer_path(@employer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
